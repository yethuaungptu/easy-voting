<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Login</title>
    <!-- CSS files -->
    <link href="../stylesheets/css/tabler.min.css" rel="stylesheet" />
    <link href="../stylesheets/css/tabler-flags.min.css" rel="stylesheet" />
    <link href="../stylesheets/css/tabler-payments.min.css" rel="stylesheet" />
    <link href="../stylesheets/css/tabler-vendors.min.css" rel="stylesheet" />
    <link href="../stylesheets/css/demo.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />
  </head>
  <body class="border-top-wide border-primary d-flex flex-column">
    <div class="page page-center">
      <div class="container-tight py-4">
        <form class="card card-md" action="/admin/login" method="post">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Login to admin</h2>
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="Enter email"
                required
              />
            </div>
            <div class="mb-2">
              <label class="form-label">
                Password
                <!-- <span class="form-label-description">
                  <a href="/forget-password">I forgot password</a>
                </span> -->
              </label>
              <div class="input-group input-group-flat">
                <input
                  id="password"
                  type="password"
                  name="password"
                  class="form-control input-box"
                  placeholder="Password"
                  required
                />
                <div
                  toggle="#password"
                  class="input-group-text fa fa-eye-slash show-hide link-secondary"
                ></div>
              </div>
            </div>
            <div class="mb-2">
              <label class="form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="rememberMe"
                />
                <span class="form-check-label" id="rememberMe"
                  >Remember me on this device</span
                >
              </label>
            </div>
            <div class="form-footer">
              <input
                class="btn btn-primary w-100"
                type="submit"
                value="Sign in"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="../javascripts/js/tabler.min.js"></script>
    <script src="../javascripts/js/show-hide.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
    <script>
      $("#rememberMe").click(function () {
        if ($("#rememberMe").prop("checked")) {
          Cookies.set("email", $("#email").val());
          Cookies.set("password", $("#password").val());
        } else {
          Cookies.remove("email");
          Cookies.remove("password");
        }
      });
      if (Cookies.get("email")) {
        $("#email").val(Cookies.get("email"));
        $("#password").val(Cookies.get("password"));
        $("#rememberMe").prop("checked", "true");
      }
    </script>
  </body>
</html>
